{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "baseUrl": ".",
    "strictNullChecks": true,
    "jsx": "react-native",
    "types": [
      "nativewind/types"
    ],
    "paths": {
      "@/*": [
        "src/*"
      ],
      "@assets/*": [
        "assets/*"
      ]
    }
  },
  "include": [
    "src",
    "*.ts",
    "*.tsx",
    "*.js",
    "expo-env.d.ts",
    "nativewind-env.d.ts",
    "metro.config.cjs",
    "eslint.config.js",
  ],
  "exclude": [
    "dist", 
    "node_modules", 
    ".expo", 
    "src/__generated__/**/*.ts",
    "ios",
    "android",
  ]
}
