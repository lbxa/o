{
  "extends": "@o/tsconfig/base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@universe/*": [
        "src/universe/*"
      ],
      "@utils/*": [
        "src/utils/*"
      ]
    },
    "jsx": "react-native",
    "tsBuildInfoFile": "node_modules/.cache/tsbuildinfo.json",
    "types": [
      "nativewind/types",
      "node"
    ],
    "checkJs": false
  },
  "include": [
    "src",
    "*.ts",
    "*.tsx",
    "*.js",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
