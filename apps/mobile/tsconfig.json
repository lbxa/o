{
  "extends": "@o/tsconfig/base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@universe/*": ["src/universe/*"],
      "@utils/*": ["src/utils/*"],
    },
    "jsx": "react-native",
    "tsBuildInfoFile": "node_modules/.cache/tsbuildinfo.json",
    "types": [
      "nativewind/types"
    ],
    "checkJs": false
  },
  "include": [
    "src",
    "*.ts",
    "*.tsx",
    "*.js", 
  ],
  "exclude": [
    "node_modules"
  ]
}
