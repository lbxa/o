{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "baseUrl": ".",
    "strictNullChecks": true,
    "jsx": "react-native",
    "types": [
      "nativewind/types"
    ],
    "paths": {
      "@/*": [
        "src/*"
      ],
      "@assets/*": [
        "assets/*"
      ],
      "@state/*": [
        "src/state/*"
      ],
      "@universe/*": [
        "src/universe/*"
      ],
      "@utils/*": [
        "src/utils/*"
      ]
    }
  },
  "include": [
    "src",
    "*.ts",
    "*.tsx",
    "*.js",
    "expo-env.d.ts",
    "nativewind-env.d.ts", 
    "metro.config.cjs",
    "eslint.config.cjs"
  ],
  "exclude": [
    ".expo",
    "ios",
    "android"
  ]
}