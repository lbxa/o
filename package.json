{
  "name": "o",
  "engines": {
    "node": ">=20.14"
  },
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "build": "turbo build",
    "dev": "turbo dev gql relay",
    "dev:api": "pnpm dev --filter=\"@o/api...\"",
    "dev:mobile": "pnpm dev --filter=\"@o/mobile...\"",
    "test": "turbo test",
    "lint": "turbo lint",
    "graph": "turbo build --graph=turbo-graph.svg",
    "typecheck": "turbo typecheck",
    "circular": "pnpx madge --circular --extensions ts ./",
    "changeset": "changeset",
    "bump": "changeset version",
    "release": "pnpm publish -r --access public"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.9",
    "turbo": "^2.2.3"
  },
  "packageManager": "pnpm@9.13.0",
  "pnpm": {
    "overrides": {
      "react-native-reanimated": "3.10.1"
    }
  }
}
