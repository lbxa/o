{
  "$schema": "https://turbo.build/schema.json",
  "extends": ["//"],
  "tasks": {
    "build": {
      "cache": false,
      "inputs": ["$TURBO_DEFAULT$", ".env.*", "drizzle.config.ts", "src/**"],
      "outputs": ["$TURBO_DEFAULT$", "dist/**"],
      "env": [
        "DB_HOSTNAME",
        "DB_USER",
        "DB_PASSWORD",
        "DB_PORT",
        "DB_NAME",
        "NODE_TLS_REJECT_UNAUTHORIZED"
      ]
    },
    "migrate:g": {
      "inputs": ["$TURBO_DEFAULT$", ".env.*", "drizzle.config.ts", "src/**"]
    },
    "migrate:push": {
      "inputs": ["$TURBO_DEFAULT$", ".env.*", "migrations/**"],
      "dependsOn": ["migrate:g"],
      "env": [
        "DB_HOSTNAME",
        "DB_USER",
        "DB_PASSWORD",
        "DB_PORT",
        "DB_NAME",
        "NODE_TLS_REJECT_UNAUTHORIZED"
      ]
    }
  }
}
