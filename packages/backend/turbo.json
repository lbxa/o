{
  "$schema": "https://turbo.build/schema.json",
  "extends": ["//"],
  "tasks": {
    "build": {
      "inputs": ["$TURBO_DEFAULT$", ".env.*", "src/**", "generate-types.mjs"],
      "env": [
        "BACKEND_PORT",
        "ACCESS_TOKEN_SECRET",
        "REFRESH_TOKEN_SECRET",
        "DB_HOSTNAME",
        "DB_USER",
        "DB_PASSWORD",
        "DB_PORT",
        "DB_NAME",
        "NODE_TLS_REJECT_UNAUTHORIZED"
      ]
    }
  }
}
