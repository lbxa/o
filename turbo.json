{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"]
    },
    "lint": {
      "cache": true,
      "dependsOn": ["^lint"]
    },
    "type-check": {
      "cache": true,
      "dependsOn": ["^type-check"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "relay": {
      "cache": false,
      "persistent": true
    },
    "gen": {
      "cache": false,
      "persistent": true,
      "dependsOn": ["^dev"]
    },
    "//#gql": {
      "cache": false,
      "persistent": true,
      "dependsOn": ["^dev"]
    }
  }
}
