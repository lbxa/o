{
  "$schema": "https://turbo.build/schema.json",
  "globalEnv": ["NODE_ENV"],
  "globalDependencies": ["**/.env.*"],
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"]
    },
    "lint": {
      "cache": true,
      "dependsOn": ["^lint"]
    },
    "test": {
      "cache": true,
      "dependsOn": ["^lint", "^build"]
    },
    "type-check": {
      "cache": true,
      "dependsOn": ["^type-check"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "relay": {
      "cache": false,
      "persistent": true
    },
    "gql": {
      "cache": false,
      "persistent": true
    }
  }
}
